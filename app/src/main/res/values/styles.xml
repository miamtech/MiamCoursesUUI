<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_custom_text_min_height</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!-- prevent menu items to be uppercase -->
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <!-- apply font for menu items text -->
        <item name="android:fontFamily">@string/font_regular</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme">
        <!-- toolbar icons including menu -->
        <item name="colorControlNormal">@color/foreground_primary</item>
    </style>

    <style name="ToolbarCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_custom_text_min_height</item>
        <item name="android:background">@color/primary</item>
        <item name="tst_duration">175</item>
        <item name="tst_text_color">@color/foreground_primary_inverse</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/stroke_tiny</item>
        <item name="android:background">@drawable/divider</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RippleStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="RippleStyle.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>