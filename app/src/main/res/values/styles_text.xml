<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Typography">
        <item name="android:textColor">@color/foreground_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@string/font_regular</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Header page -->
    <style name="Typography.Headline1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@string/font_medium</item>
    </style>

    <!-- Header, Bottom sheet -->
    <style name="Typography.Headline2">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toolbar title -->
    <style name="Typography.Headline3">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.SubHeadline">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Typography.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/font_medium</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Typography.Input">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@string/font_regular</item>
    </style>

    <style name="Typography.BottomNavigationView">
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Typography.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/font_light</item>
    </style>

    <style name="Typography.Body3">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.Body4">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/foreground_secondary</item>
    </style>

    <style name="Typography.Badge" parent="Typography.Body3" />

</resources>